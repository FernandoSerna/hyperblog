END
Attribute VB_Name = "TB_TIPOSCLIENTES"
Attribute VB_GlobalNameSpace = False
Attribute VB_Creatable = True
Attribute VB_PredeclaredId = False
Attribute VB_Exposed = False

Public MensajeError As String
Dim CMD As New Command
'ANADIR UN REGISTRO
Public Function Anadir(clVCHA_TCL_TIPO_CLIENTE_ID As String, clVCHA_TCL_NOMBRE As String) As Boolean
Dim rs As ADODB.Recordset, Cadena As String
Anadir = True
On Error GoTo HELL

Set CMD.ActiveConnection = cnn
CMD.CommandType = adCmdStoredProc
    
If var_modifica_registro_tipo_cliente Then
    CMD.CommandText = "TIPOSCLIENTES_M"
Else
    CMD.CommandText = "TIPOSCLIENTES_I"
End If
    CMD("@VCHA_TCL_TIPO_CLIENTE_ID") = clVCHA_TCL_TIPO_CLIENTE_ID
    CMD("@VCHA_TCL_NOMBRE") = clVCHA_TCL_NOMBRE
CMD.execute
Set CMD = Nothing
SIGUE:
On Error GoTo 0
Exit Function
HELL:
    MensajeError = Err.Description
    Anadir = False
    GoTo SIGUE
End Function
'ELIMINAR
Public Function Eliminar(clVCHA_TCL_TIPO_CLIENTE_ID As String) As Boolean
Dim rs As ADODB.Recordset, Cadena As String
Eliminar = True
On Error GoTo HELL
Set CMD.ActiveConnection = cnn                      'Esta es la conexión activa
CMD.CommandType = adCmdStoredProc                   'Aquí le indico a ADO que se trata de un PA
    
CMD.CommandText = "TIPOSCLIENTES_E"                         'Abrir Procedimiento Almacenado y Agregar Banco
    CMD("@Vcha_tcl_tipo_cliente_id") = clVCHA_TCL_TIPO_CLIENTE_ID
CMD.execute                                         'Ejecutar el PA

SIGUE:
On Error GoTo 0
Exit Function
HELL:
    MensajeError = Err.Description
    Eliminar = False
    GoTo SIGUE
End Function


